{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",

  "name": "${name}",
  "description": "Adds a new Formats tab to maruohon's MiniHUD, giving you full control over your info lines!",
  "authors": [
    "axialeaa",
    "lntricate"
  ],
  "contact": {
    "sources": "https://github.com/axialeaa/colorful-minihud",
    "issues": "https://github.com/axialeaa/colorful-minihud/issues"
  },

  "icon": "assets/${id}/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.axialeaa.${id}.ColorfulMinihudMod"
    ],
    "preLaunch": [
      "me.axialeaa.${id}.PreLaunch"
    ],
    "mm:early_risers": [
      "me.axialeaa.${id}.EarlyRiser"
    ]
  },
  "mixins": [
    "${id}.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.4",
    "minecraft": "${minecraft_dependency}",
    "minihud": "${minihud_dependency}"
  }
}
